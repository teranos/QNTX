{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QNTX",
  "version": "0.1.0",
  "identifier": "nl.sbvh.qntx",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["qntx"]
      }
    }
  },
  "build": {
    "beforeDevCommand": "test \"$SKIP_DEV_SERVER\" = \"1\" && echo 'Skipping dev server (already running)' || (cd .. && bun run dev)",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:8820",
    "frontendDist": "../../internal/server/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/qntx"
    ],
    "iOS": {
      "developmentTeam": "88645J88Q8"
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13",
      "infoPlist": "Info.plist"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "QNTX",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
